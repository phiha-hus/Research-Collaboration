To study the growth of the analytical as well as the numerical solutions of delay differential equations, in 1958 Dahlquist and Lozinskij introduced independently the concept of logarithmic norm for a matrix. Since then, this important 
concept has been studied for various class of dynamical systems. For details see the survey \cite{Sor06}. For a matrix-valued function $L(t) \in \C^{n,n}$ with the given matrix-norm $\| \cdot \|$, the logarithmic norm is 
defined pointwise as follows
%
\be\label{log norm}
 \mu[L](t) := \lim_{h \rar 0^+} \frac{ \|I+hL(t) \| - 1}{h}.
\ee
%
For using later we need to discuss the growth bound of the solution to the implicit differential equation of the form 
%
\begin{align}\label{eq1.6}
 \begin{split}
\Si(t) \dot{z}(t) &= L(t) z(t) +  \Phi(t), \quad t \in \bbI = [t_0,t_f], \\
 z(t_0)     &= z_0,\\
 \end{split}
\end{align}
%
where the forcing term $\Phi \in C^0$, and the matrix-valued function $\Si$ is pointwise diagonal and pointwise invertible. We introduce the concept of logarithmic norm for the pair ($\Si$,$L$) as follows
%
\be\label{log norm matrix pair}
 \mu[\Si,L](t) := \mu[\Si^{-1}L](t) = \lim_{h \rar 0^+} \frac{ \|I+h \Si^{-1}(t) L(t) \| - 1}{h}.
\ee
%
Now we prove the following result, in comparision see \cite{Sor84,Sor06,Zen97}.
%
\begin{lem}\label{Lem1}
Consider the ODE \eqref{eq1.6}. Let $\mu[\Si,L](t)$ be the logarithmic norm of the pair ($\Si$,$L$). Then the following inequality holds for all $t \geq t_0$
%
\be\label{eq2.-1}
 \|z(t)\| \leq \cE(t,t_0) \|z_0\| +  \int_{t_0}^{t} \cE(t,s) \n{\Si^{-1}(s) \Phi(s)}ds.
\ee
%
where the function $\cE$ is defined by $\cE(t_2,t_1) := \exp \Big(\int_{s=t_1}^{t_2} \mu[\Si,L](s) ds \Big)$. Moreover, in the case that $\mu[\Si,L](t) \not=0$ for all $t\geq t_0$, then 
%
\be\label{eq2.0}
 \| z(t) \|  \leq \cE(t,t_0) \| z_0 \| + \Big| 1 - \cE(t,t_0) \Big|   \ \Big\| \  \fr{\Si^{-1} \Phi}{\mu[\Si,L]} \Big\|^t_{\infty}. 
\ee
%
\end{lem}
\begin{proof} Similar to \cite{Sor06}, using the upper-right Dini derivative we obtain the following estimation
 %
 \be\label{eq2.-2}
   \mathrm{D}^+_t \|z(t)\| \leq \mu[\Si,L](t) \ \|z(t)\| + \n{\Si^{-1}(t) \Phi(t)}.
 \ee
 %
Noticing that the function $\cE(t,t_0) = exp \Big(\int_{t_0}^{t} \mu[\Si,L](s)ds \Big) $ has the properties
 %
 \be\label{eq2.-5}
     \frac{d}{dt} \cE(t,t_0) =  \mu[\Si,L](t) \cE(t,t_0)  \ \mbox{ and } \ \frac{d}{ds} \cE(t,s) =  -\mu[\Si,L](s) \cE(t,s).
 \ee
 %
Consider the scalar function $w(t) := \fr{\|z(t)\|}{\cE(t,t_0)}$ and let $\tPhi := \Si^{-1}\Phi$, \eqref{eq2.-2} implies that $$ \mathrm{D}^+_t \|w(t)\| \leq \fr{ \n{\Si^{-1}(t) \Phi(t)} }{\cE(t,t_0)}.$$
Integrate this inequality from $t_0$ to $t$ we obtain 
 %
 \bens
  w(t) &\leq& w(t_0) + \int_{t_0}^{t} \fr{ \n{\Si^{-1}(s) \Phi(s)} }{ \cE(s,t_0) }ds, \\
  \iff  \quad \cE(t,t_0) \|w(t)\| &\leq& \cE(t,t_0) \|w(t_0)\| +  \int_{t_0}^{t} \cE(t,s) \n{\tPhi(s)}ds,
 \eens
 %
which is nothing else than \eqref{eq2.-1}. Moreover, from \eqref{eq2.-1} and \eqref{eq2.-5} it follows that
%
\bens
   \|z(t)\| &\leq& \cE(t,t_0) \|z_0\| +  \int_{t_0}^{t} \Big( \frac{d}{ds}\cE(t,s) \Big)  \frac{\n{\tPhi(s)}}{-\mu[\Si,L](s)}ds, \\
            &\leq& \cE(t,t_0) \|z_0\| +  \Big| \int_{t_0}^{t} \Big( \frac{d}{ds}\cE(t,s) \Big) ds \Big| \  \sup_{t_0 \leq s \leq t} \Big\| \  \fr{\tPhi(s)}{\mu[\Si,L](s)} \Big\|, \\
            &\leq& \cE(t,t_0) \| z_0 \| + \Big| 1 - \cE(t,t_0) \Big|   \ \Big\| \  \fr{\tPhi}{\mu[\Si,L]} \Big\|^t_{\infty}, 
\eens
%
which is exactly \eqref{eq2.0}.
\end{proof}

\begin{rem}
 We note that the logarithmic norm of the function pair ($\Si$,$L$) could be defined as in \cite{HigG99}, which reads
 %
 \be
     \tmu[\Si,L](t) := \lim_{h \rar 0^+} \sup_{v\not=0} \frac{ \|  \left( \Si(t) + h L(t) \right)v  \| - \n{\Si(t)v} }{h \n{\Si(t)v} } = \mu[L\Si^{-1}](t) .
 \ee
 %
However, this norm does not coincide with the one in \eqref{log norm matrix pair}, since $\mu[L\Si^{-1}] \not= \mu[\Si^{-1}L]$. In fact, Octave experiments for systems in two dimensions turn out that these two norms are independent.
\end{rem}
%

\begin{rem}\label{rem2}
Making use of the logarithmic norm for matrix pencils, see e.g. \cite{HigG99}, one can establish a similar growth bound estimation for the differential part of the solution $x(t)$ of the DDAE \eqref{eq1.3}. 
Nevertheless, an estimation for an algebraic part of $x(t)$, unfortunately, is not yet possible. In fact, we obtain the following inequality
%
\[
  \| \hE(t) x(t)\| \leq \cE(t,t_0) \| \hE(t_0)z_0\| +  \int_{t_0}^{t} \cE(t,s) \n{\hB(s)x(s-\tau(s))+\hf(s)}ds.
\]
%
For the sake of brevity, the detailed proof will be omitted. 
\end{rem}

