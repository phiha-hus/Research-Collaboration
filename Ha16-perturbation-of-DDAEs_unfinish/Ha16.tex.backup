\section{Perturbation analysis of linear DDAEs}\label{perturbation}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%===========================================================================================================================

Even though the perturbation theory, in particular the contractivity and stability anaylsis of the (theoretical/numerical) solution, has been extensively studied for both DAEs, see e.g. \cite{HigMT03a,HigMT03b} and DDEs, 
see e.g. \cite{BelGZ99,Zen97}, to our best knowledge, the perturbation theory of DDAEs is almost open, and only several results are already known \cite{AscP95,GugH07,DuLMT13}. 
In order to partially fill in this gap, in this section we firstly study 
the sensitivity of the solution $x(t)$ to the IVP \eqref{eq1.1},\eqref{eq1.1ic} with respect to systems perturbation, which is followed by the discussion of contractivity and robust stability. 
%
Inherited from the perturbation analysis of DDEs and of DAEs, one can perturb not only the system coefficients $E$, $A$, $B$, $f$ (as for DAEs) but also the delay function $\tau(t)$ and the initial function $\phi(t)$ (as for DDEs) 
as well. However, as shown in \textbf{see Volkers articles} \cite{DuLMT13}, the structural properties of the systems, for example the index concept, will be strongly affected by arbitrary perturbation on the system coefficients. 
The similar situation will occur for the perturbation in the delay function $\tau$, which could lead to stabilization or destabilization effect, even for scalar equations, see e.g. \cite{BelZ03}, Chapter 1, \cite{Log98}. 
These topics go beyond the scope of this article, and therefore, will be left for future researches. We refer the interested readers to \cite{BelZ03,LogT96,Log98} for further details in the perturbation analysis of DAEs and of DDEs.
%
\begin{rem}
The robustness of regular, sfree DDAEs with respect to the perturbation only in $\phi$, but not in $\fr{d \phi}{dt}$. Does this feature distinguish DDAEs and neutral DDEs? \textbf{This topic goes beyond the scope of this 
article and further experiments, where the derivative $\dot{\phi}$ will be perturbed, will be considered in the future.}
\end{rem}
%

In the following definition we directly extend the \emph{perturbation index} concept in \cite{HaiLR89} for general nonlinear DDAEs.
%
\begin{defi} The IVP 
%
\bens
  F(t,x(t),\dot{x}(t),x(t-\tau(t))) &=& 0,  \qquad t \in \bbI, \\
                        x|_{[t_0-\tau_0,t_0]} &=& \phi, 
\eens
%
has \emph{perturbation index $\nu \geq 1$} along the solution $\bar{x}$ if $\nu$ is the smallest positive integer such that for the perturbed problem 
%
\bens
  F(t,x(t),\dot{x}(t),x(t-\tau(t))) &=& \de (t), \qquad t \in \bbI, \\
                        x|_{[t_0-\tau_0,t_0]} &=& \phi + \de\phi, 
\eens
%
the defect $\de x(t) := x(t)-\bar{x}$ satisfies the following inequality
%
\be
   \| \de x(t) \|  \leq C \ \Big(  \| \de \phi \|_{\nu-1} + \| \de \|^t_{\infty} +  \dots + \| \de^{\nu-1} \|^t_{\infty} \Big) .
\ee
%
for sufficiently small $\de(t)$ in the $\| \cdot \|_{\nu-1}$ norm. Here $C$ is a positive constant which depends on $F$, $\phi$, $\bar{x}$, and length of the time interval $\bbI$.\\
\noindent In the case that there exist the estimation 
%
\be
   \| \de x(t) \|  \leq C \ \Big(  \int_{t_0-\tau_0}^{t_0} \| \de \phi(s)\|ds  +  \int_0^t \| \de(s)\|ds \Big) .
\ee
%
the DDAE is called of \emph{perturbation index $0$}.
\end{defi}

In the following two theorems we study the sensitivity and robust stability of the corresponding IVP for system \eqref{eq1.3}. 

%
\begin{thm}\label{thm1}
Consider the regular, strangeness-free DDAE \eqref{eq1.3}. Moreover, assume that the function coefficients $E$, $A$, $B$, $f$ are sufficiently smooth so that the 
functions $P$ and $Q$ in \eqref{eq1.4} exist, and hence the system \eqref{eq1.5} is well defined.
If $\bbI$ is bounded, then there exists a positive constant $C$ which depends on the system coefficients of \eqref{eq1.3} and on the length of $\bbI$, so that 
%
\be\label{eq2.1} 
   \| x(t) \|  \leq C \ \Big(  \| \phi \|_{\infty} + \| f \|^t_{\infty} \Big) .
\ee
%
Consequently, the DDAE \eqref{eq1.4} has perturbation index $1$.
\end{thm}
\begin{proof} Within this proof, for convenience, we skip the argument $(t)$ in all system coefficients and also in the delay function $\tau(t)$. 
For an arbitrary function $g$, we use the super script $i$ to indicate its restriction on the interval $\bbI_{i}$, i.e., $g^j = g_{|\bbI_j}$. 
Without loss of generality, we assume that $t\in \bbI_j$. Thus we obtain
%
\bsq
\begin{alignat}{2}
 \dot{y}^j_1(t) &= A^j_{11} y^j_1(t) + \m{B^j_{11} & B^j_{12}} y^{j-1}(t-\tau) + \tf^j_{1}, \label{eq2.12a} \\
  y^j_2(t)      &= \m{B^j_{21} & B^j_{22}} y^{j-1}(t-\tau) \!+\! \tf^j_{2}. \label{eq2.12b}
\end{alignat}
\esq
%
Set $\Phi^j := \m{B^j_{11} & B^j_{12}} y^{j-1}(t-\tau) + \tf_{1}$, $t\in \bbI_j$. Lemma \ref{Lem1} applied to \eqref{eq2.12a} implies that
%
\[
 \n{y^j_1(t)} \leq \cE(t,\eta_{j-1}) \n{y^j_1(\eta_{j-1})} + \int_{\eta_{j-1}}^t \cE(t,s) \n{\Phi^j(s)} ds.
\]
%
Thus there exist two constants $\a_1$, $\a_2 \in \R_+$ so that the following estimation holds
%
\bsq
%
\be\label{eq2.10a}
  \n{y^j_1(t)} \leq \a_1 \n{y^j_1(\eta_{j-1})} + \a_2 \n{\Phi^j}^t_{\infty}.
\ee
%
On the other hand \eqref{eq2.12b} implies that
%
\be\label{eq2.10b}
  \n{y^j_2(t)} \leq \n{ \m{B^j_{21} & B^j_{22}}  }_{\infty} \ \n{y^{j-1}}_{\infty} + \n{\tf^j_{2}}^t_{\infty}.
\ee
%
\esq
%
Combining \eqref{eq2.10a} and \eqref{eq2.10b} and noticing that 
%
\bens
  \n{y^j_1(\eta_{j-1})} \leq \n{y^{j-1}_1}_{\infty}, \quad \n{\Phi^j}^t_{\infty} \leq \n{ \m{B^j_{11} & B^j_{12}}}_{\infty} \ \n{y^{j-1}}_{\infty} + \n{\tf^j_1}^t_{\infty},
\eens
%
we see that there exist $\b \in \R_+$ so that
%
\be\label{eq2.11} 
   \n{y^j(t)} \leq \b \left( \n{y^{j-1}}_{\infty} + \n{\tf^j}^t_{\infty} \right).
\ee
%
and hence, due to the arbitrariness of $t \in \bbI_j$ this leads to
%
\bes
 \n{y^j}_{\infty} \leq \b \left(  \n{y^{j-1}}_{\infty} + \b \n{\tf^j}_{\infty} \right).
\ees
%
It is clear that the constant $\b$ depends on $j$. However, if the interval $\bbI$ is bounded, one may assume that this constant is uniform for every $j$. Thus, simple induction gives 
%
\bes
    \n{y^{j-1}}_{\infty} \leq \b^{j-1} \n{y^{0}}_{\infty} + \sum_{i=1}^{j-2} \b^i \n{\tf^{j+1-i}}_{\infty}.
\ees
%
Hence, \eqref{eq2.11} leads to 
%
\bens
  \n{y^j(t)} &\leq& \b \left( \b^{j-1} \n{y^{0}}_{\infty} + \sum_{i=1}^{j-2} \b^i \n{\tf^{j+1-i}}_{\infty} + \n{\tf^j}^t_{\infty} \right), \\
             &\leq& \b^{j} \n{y^{0}}_{\infty} + \sum_{i=1}^{j-1} \b^i \n{\tf^j}^t_{\infty}.
\eens
%
Since the inteval $\bbI$ is bounded, we have $\max\{ \|P\|_{\infty}, \ \|Q\|_{\infty} \} < \infty$. 
Therefore, 
%
\bens
  \n{x(t)} &\leq& \n{Q}_{\infty} \n{y(t)} \\
           &\leq& \n{Q}_{\infty} \left( \b^{j} \n{Q^{-1}(t_0) x^{0}}_{\infty} + \sum_{i=1}^{j-1} \b^i \n{Pf}^t_{\infty} \right), \\
           &\leq& \n{Q}_{\infty} \left( \b^{j} \n{Q^{-1}(t_0)} \n{x^{0}}_{\infty} + \sum_{i=1}^{j-1} \b^i \n{P}_{\infty} \n{f}^t_{\infty} \right).
\eens
%
Let $C:= \n{Q}_{\infty} \ \underset{j}{\max} \{\b^{j} \n{Q^{-1}(t_0)}, \ \sum_{i=1}^{j-1} \b^i \n{P}_{\infty}   \}$ we then have \eqref{eq2.1}.
\end{proof}

Theorem \ref{thm1} guarantees that, under certain smoothness conditions on the system coefficients, the solution $x(t)$ to the corresponding IVP of the DDAE \eqref{eq1.4} is robust under perturbation of 
the initial function $\phi$ and of the inhomogeneity $f$. In the next section we consider the contractivity and robust stability of linear DDAEs.

